[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "PenguiFlow RAG server template for {{ project_name }}."
readme = "README.md"
requires-python = ">=3.11"
dependencies = [
{% if with_a2a %}
    "penguiflow[planner,a2a-server]",
{% else %}
    "penguiflow[planner]",
{% endif %}
    "pydantic>=2.6",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.4",
    "pytest-asyncio>=0.23",
{% if with_a2a %}
    "httpx>=0.27",
{% endif %}
]

[project.scripts]
{{ package_name }} = "{{ package_name }}.__main__:main"

[tool.setuptools]
package-dir = {"" = "src"}

[tool.setuptools.packages.find]
where = ["src"]

[tool.pytest.ini_options]
asyncio_mode = "auto"
