{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run {{ project_name }}",
            "type": "shell",
            "command": "uv run python -m {{ package_name }}",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv run pytest -xvs",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "uv run ruff check src/ tests/",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
